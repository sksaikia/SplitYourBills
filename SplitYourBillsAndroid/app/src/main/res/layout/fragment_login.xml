<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050507"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050507"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:id="@+id/relative_layout">

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/tv_welcome_text"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="60sp"
                android:focusable="true"
                android:fontFamily="@font/roboto"
                android:text="Login"
                android:layout_marginLeft="@dimen/margin_left"
                android:textColor="#FFFFFF"
                android:textSize="30dp"
                android:textStyle="bold"
                android:visibility="visible">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Email"
                    android:fontFamily="@font/roboto"
                    android:textSize="14sp"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:textColor="#B8B8B8"
                    android:layout_height="wrap_content">

                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    app:boxStrokeColor="#C44BC1"
                    android:backgroundTint="#C44BC1"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="50dp"
                    app:boxCornerRadiusBottomEnd="10sp"
                    app:boxCornerRadiusBottomStart="10sp"
                    app:boxCornerRadiusTopEnd="10sp"
                    app:boxCornerRadiusTopStart="10sp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textColor="#B8B8B8"
                        android:fontFamily="@font/roboto"
                        android:textSize="15sp"
                        android:padding="0dp"
                        android:id="@+id/et_email"
                        android:layout_height="match_parent">


                    </com.google.android.material.textfield.TextInputEditText>


                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20sp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:text="Password"
                    android:fontFamily="@font/roboto"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    android:textColor="#B8B8B8"
                    android:layout_height="wrap_content">

                </TextView>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    app:boxStrokeColor="#C44BC1"
                    android:backgroundTint="@color/colorPrimary"
                    android:layout_marginLeft="@dimen/margin_left"
                    android:layout_marginRight="@dimen/margin_right"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_height="50dp"
                    app:boxCornerRadiusBottomEnd="10sp"
                    app:boxCornerRadiusBottomStart="10sp"
                    app:boxCornerRadiusTopEnd="10sp"
                    app:boxCornerRadiusTopStart="10sp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:textColor="#B8B8B8"
                        android:id="@+id/et_password"
                        android:fontFamily="@font/roboto"
                        android:inputType="textPassword"
                        android:textSize="15sp"
                        android:padding="0dp"
                        android:layout_height="match_parent">


                    </com.google.android.material.textfield.TextInputEditText>


                </com.google.android.material.textfield.TextInputLayout>



            </LinearLayout>



            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:id="@+id/progress_bar"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_login"
                style="@style/ButtonStyle"
                android:layout_gravity="center"
                android:textSize="15dp"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_right"
                android:fontFamily="@font/roboto"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/input_layout2"
                android:text="Login"
                app:rippleColor="@color/md_pink_100"
                app:backgroundTint="#C44BC1"
                />


                <TextView
                    android:id="@+id/tv_register"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:layout_gravity="center"

                    android:textSize="14sp"
                    android:textColor="#B8B8B8"
                    android:fontFamily="@font/roboto"
                    android:text="Don't have an account? Join Now"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>




            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:fontFamily="@font/roboto_medium"
                android:text="Forgot Password"
                android:textAlignment="center"
                android:textColor="#B8B8B8"
                android:textSize="14dp"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>

    </LinearLayout>

</ScrollView>