<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#050507"
    android:id="@+id/linear_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ui.main.transactionDetails.TransactionDetailsFragment">


    <TextView
        android:layout_width="match_parent"
        android:text="Update Transaction Details here"
        android:fontFamily="@font/roboto_medium"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_left"
        android:layout_marginRight="@dimen/margin_right"
        android:textColor="#B8B8B8"
        android:layout_height="wrap_content"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Amount"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:textColor="#B8B8B8"
            android:layout_height="wrap_content">

        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            app:boxStrokeColor="#C44BC1"
            android:backgroundTint="#C44BC1"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="50dp"
            app:boxCornerRadiusBottomEnd="10sp"
            app:boxCornerRadiusBottomStart="10sp"
            app:boxCornerRadiusTopEnd="10sp"
            app:boxCornerRadiusTopStart="10sp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="#B8B8B8"
                android:fontFamily="@font/roboto"
                android:textSize="15sp"
                android:padding="0dp"
                android:inputType="number"
                android:id="@+id/et_amount"
                android:layout_height="match_parent">


            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>



    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Description"
            android:fontFamily="@font/roboto"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:textColor="#B8B8B8"
            android:layout_height="wrap_content">

        </TextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10sp"
            app:boxStrokeColor="#C44BC1"
            android:backgroundTint="#C44BC1"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_height="50dp"
            app:boxCornerRadiusBottomEnd="10sp"
            app:boxCornerRadiusBottomStart="10sp"
            app:boxCornerRadiusTopEnd="10sp"
            app:boxCornerRadiusTopStart="10sp"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:textColor="#B8B8B8"
                android:fontFamily="@font/roboto"
                android:textSize="15sp"
                android:padding="0dp"
                android:id="@+id/et_description"
                android:layout_height="match_parent">


            </com.google.android.material.textfield.TextInputEditText>


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_txn"
            android:layout_marginTop="40dp"
            style="@style/ButtonStyle"
            android:layout_gravity="center"
            android:textSize="15dp"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_right"
            android:fontFamily="@font/roboto"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/input_layout2"
            android:text="Update"
            app:rippleColor="@color/md_pink_100"
            app:backgroundTint="#C44BC1"
            />


    </LinearLayout>


</LinearLayout>