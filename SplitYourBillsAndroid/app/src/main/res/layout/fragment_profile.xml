<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212B38"
    tools:context=".ui.main.profile.ProfileFragment">

    <ImageView
        android:layout_width="40sp"
        android:layout_gravity="right"
        android:src="@drawable/ic_edit"
        android:layout_height="40sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textColor="#FFF"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:text="Person Name" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/phone"
        android:layout_centerInParent="true"
        android:layout_below="@id/name"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:textSize="28sp"
        android:layout_gravity="center"
        tools:text="Phone no : Person Phone no" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/privacy_policy"
        android:layout_centerInParent="true"
        android:layout_below="@id/phone"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="Privacy Policy" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/terms_conditions"
        android:layout_centerInParent="true"
        android:layout_below="@id/privacy_policy"
        android:layout_marginTop="10dp"
        android:textColor="#FFF"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:text="Terms of Use" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_log_out"
        style="@style/ButtonStyle"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:layout_below="@id/terms_conditions"
        android:labelFor="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/roboto"
        android:text="LOG OUT"
        app:rippleColor="@color/md_pink_100"
        app:backgroundTint="#37465B"
        />

</LinearLayout>