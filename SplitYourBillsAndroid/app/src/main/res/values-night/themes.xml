<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="SplitYourBillsAndroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button" >
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="cornerRadius">18dp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/md_grey_50</item>
    </style>

    <style name="editTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="boxBackgroundColor">@color/md_grey_50</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textColor">@color/md_grey_50</item>
    </style>

    <style name="list_item_blood_title" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">4</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>

    </style>

    <style name="list_item_blood_fetch" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>

    </style>

    <style name="edittext_title" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>

    <style name="edittext_body" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:backgroundTint">@color/md_pink_300</item>
    </style>

</resources>